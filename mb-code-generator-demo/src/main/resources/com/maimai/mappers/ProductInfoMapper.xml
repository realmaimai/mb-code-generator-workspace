<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maimai.mappers.ProductInfoMapper">
	<!-- entity mapping -->
	<resultMap id="base_result_map" type="com.maimai.entities.po.ProductInfo">
		<!-- ID -->
		<id column="id" property="id"/>
		<!-- Company ID -->
		<result column="company_id" property="companyId"/>
		<!-- Code -->
		<result column="code" property="code"/>
		<!-- Product Name -->
		<result column="product_name" property="productName"/>
		<!-- Price -->
		<result column="price" property="price"/>
		<!-- SKU Type -->
		<result column="sku_type" property="skuType"/>
		<!-- Color Type -->
		<result column="color_type" property="colorType"/>
		<!-- Create Time -->
		<result column="create_time" property="createTime"/>
		<!-- Create Date -->
		<result column="create_date" property="createDate"/>
		<!-- Stock -->
		<result column="stock" property="stock"/>
		<!-- Status -->
		<result column="status" property="status"/>
	</resultMap>

	<sql id="base_column_list">
		id, company_id, code, product_name, price, sku_type, color_type, create_time, create_date, stock, status 
	</sql>

	<sql id="base_query_condition">
		<if test="query.id != null">
			and id = #{query.id}
		</if>
		<if test="query.companyId != null and query.companyId != ''">
			and companyId = #{query.companyId}
		</if>
		<if test="query.code != null and query.code != ''">
			and code = #{query.code}
		</if>
		<if test="query.productName != null and query.productName != ''">
			and productName = #{query.productName}
		</if>
		<if test="query.price != null">
			and price = #{query.price}
		</if>
		<if test="query.skuType != null">
			and skuType = #{query.skuType}
		</if>
		<if test="query.colorType != null">
			and colorType = #{query.colorType}
		</if>
		<if test="query.createTime != null">
			and createTime = #{query.createTime}
		</if>
		<if test="query.createDate != null">
			and createDate = #{query.createDate}
		</if>
		<if test="query.stock != null">
			and stock = #{query.stock}
		</if>
		<if test="query.status != null">
			and status = #{query.status}
		</if>
	</sql>
</mapper>